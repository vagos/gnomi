% unixmanual.sty - Style file for UNIX printed manual look
% Version: 2025-07-27

\ProvidesPackage{unixmanual}[2025/07/27 v1.0 UNIX Manual Style]

% Use T1 encoding for proper font shapes
\RequirePackage[T1]{fontenc}
% Use Bera Mono as monospace font (PDFLaTeX compatible)
\RequirePackage[scaled]{beramono}
\renewcommand{\ttdefault}{fvm}
\renewcommand{\familydefault}{\ttdefault}

% Page layout: 1in margins on letterpaper
\RequirePackage[letterpaper,margin=1in]{geometry}
\setlength{\parindent}{2em}
\setlength{\parskip}{0.5em}
\raggedbottom

% Section numbering depth
\setcounter{secnumdepth}{3}
\setcounter{tocdepth}{3}

% Headers & footers
\RequirePackage{fancyhdr}
\fancyhf{}
\fancyhead[L]{\small UNIX Programmer's Manual}
\fancyhead[R]{\small Section \nouppercase{\rightmark}}
\fancyfoot[C]{\thepage}
\pagestyle{fancy}

% Title formatting
\RequirePackage{titlesec}
\titleformat{\chapter}{\huge\bfseries\uppercase}{\thechapter}{1em}{}
\titleformat{\section}{\Large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalsize\bfseries}{\thesubsection}{1em}{}

% Verbatim/code listings style
\RequirePackage{listings}
\lstset{
  basicstyle=\ttfamily\small,
  frame=single,
  breaklines=true
}
